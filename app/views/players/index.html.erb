			<div class="row user <%= player == current_user ? ' current-user' : '' %>">
			    <div class="col-xs-12 col-sm-4">
			      	<!-- insert <div class="card"> -->
					<div class="card">
						<div>
<div class="ranking-all">
	<div class="container center">
		<div id="userRank">
			<h1 id="title-enhancement">Legendary Cosmonauts</h1>			
			<% @users.order("score DESC").each do |player| %>
				<div class="user<%= player == current_user ? ' current-user' : '' %>">
					<%= link_to(player_path(player)) do %>
						<div class="pic-and-name card">
							<%= image_tag("https://kitt.lewagon.com/placeholder/users/#{player.username}", class: "profile-pic") %>
							<h5>
								<%= player.username %>
							</h5>
						</div>
					<% end %>
					<div class="ship-and-score">
						<div class="card ship-name">
							<p>
								<i class="fas fa-rocket"></i>
								<%= player.ship.name.upcase %>
								<i class="fas fa-rocket"></i>
							</p>
						</div>						
						<div class="card">
							<p>
								<%= player.score %>
							</p>
							<p>
								pts.
							</p>						
						</div>
					</div>
				</div>
	    	</div>
		<% end %>
	</div>
