<div class="wrapper-home">
  <div class="container container-content">
    <div class="row row-dash">
      <div class="col-xs-12 col-sm-12">
        <div class="card">
          <h2 id="title-enhancement">Your pilot license</h2>
        </div>
      </div>
    </div>
    <div class="row row-dash">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <div class="card parent">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{current_user.username}", class: "img-circle profile-pic" %>
            <i class="fab fa-galactic-senate ranking"></i>
            <p id="username-enhancement"><%= current_user.username %></p>
            <p id="stats-enhancement">Stats:</p>
            <div id="your-ship-enhancement">
              <ul id="nice-list">
                <li id="ships-container"> <%= image_tag "myship", class: "img-ship" %> <p id="font-improvement"><%= current_user.ship.name %></p></li>
              </ul>
            </div>
            <div id="your-coins-enhancement">
              <ul id="nice-list">
                <li id="coins-container"> <%= image_tag "mycoins" %> <p id="font-improvement"><%= current_user.coins %> Coins</p></i></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <div class="card">
            <ul id="nice-list">
              <li><h4>Acc: </h4></li>
              <li><h4>Spd: </h4></li>
              <li><h4>Man: </h4></li>
              <li><h4>Atk: </h4></li>
              <li><h4>Def: </h4></li>
            </ul>
          </div>
        </div>
    </div>
    <div class="row row-dash">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        </div>
    </div>
    <div class="row row-dash">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        </div>
    </div>
    <div class="row row-dash">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        </div>
    </div>
    <div class="row row-dash">
        <div class="col-xs-12 col-sm-12">
          <div class="card">
            <h1 id="title-enhancement">Your parts</h1>
            <ul  class="wrapper-user-parts" id="nice-list">
              <% current_user.parts.each do |part| %>
                <% if part.is_equiped = true %>
                  <p class="equiped"> <%= part.serial %> </p>
                <% else %>
                  <p><%= part.serial %></p>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
    </div>
  </div>
</div>
